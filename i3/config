### Variables

# Mod key
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

# Color pallete
set $black	#000103
set $white	#FFFFFA
set $gray1	#515052
set $gray2	#333138
set $red	#FF312E

# Terminal
set $term kitty

# Aplication launcher
set $menu dmenu_run -fn "DejaVuSansMono-11" -nb "#000103" -nf "#FFFFFA" -sb "#FFFFFA" -sf "#000103"

# Browser
set $browser firefox

# Refresh i3status on change
set $refresh_i3status killall -SIGUSR1 i3status


### Apperance

# Font
font pango:DejaVu Sans Mono Bold 11

# Remove titlebar and set thin border
default_border pixel 1

# Gap between windows
gaps inner 8

#target			title	bg	text	indicator	border
client.focused		$white	$black	$white	$gray2		$white
client.focused_inactive	$white	$black	$white	$gray2		$gray1	
client.unfocused	$white	$black	$white	$gray2		$gray1
client.urgent		$red	$black	$red	$gray2		$red
client.placeholder	$white	$black	$white	$gray2		$gray1
client.background	$black


### Idle configuration

# Lock screen after 300s of inactivity
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -c 000000 --nofork
exec --no-startup-id xset s 300 300
exec --no-startup-id xset +dpms


### Key bindings

# Basic:

	# Start terminal
	bindsym $mod+Return exec $term
	
	# Kill focused window
	bindsym $mod+Shift+q kill

	# Start app launcher
	bindsym $mod+d exec --no-startup-id $menu

	# Drag floating windows
	floating_modifier $mod

	# Reload configuration file
	bindsym $mod+Shift+r reload

	# Shutdown
	bindsym $mod+Shift+Home exec systemctl poweroff

	# Lock screen
	bindsym $mod+Home exec i3lock -c 000000 & xset dpms force off

# Moving around:

	# Change focus
	bindsym $mod+$left focus left
	bindsym $mod+$down focus down
	bindsym $mod+$up focus up
	bindsym $mod+$right focus right	

	# Move focused window
	bindsym $mod+Shift+$left move left
	bindsym $mod+Shift+$down move down
	bindsym $mod+Shift+$up move up
	bindsym $mod+Shift+$right move right

# Workspaces:

	# Define names for default workspaces
	set $ws1 "1"
	set $ws2 "2"
	set $ws3 "3"
	set $ws4 "4"
	set $ws5 "5"
	set $ws6 "6"
	set $ws7 "7"
	set $ws8 "8"
	set $ws9 "9"
	set $ws10 "10"

	# Switch to workspace
	bindsym $mod+1 workspace number $ws1
	bindsym $mod+2 workspace number $ws2
	bindsym $mod+3 workspace number $ws3
	bindsym $mod+4 workspace number $ws4
	bindsym $mod+5 workspace number $ws5
	bindsym $mod+6 workspace number $ws6
	bindsym $mod+7 workspace number $ws7
	bindsym $mod+8 workspace number $ws8
	bindsym $mod+9 workspace number $ws9
	bindsym $mod+0 workspace number $ws10
	
	# Move focused container to workspace
	bindsym $mod+Shift+1 move container to workspace number $ws1
	bindsym $mod+Shift+2 move container to workspace number $ws2
	bindsym $mod+Shift+3 move container to workspace number $ws3
	bindsym $mod+Shift+4 move container to workspace number $ws4
	bindsym $mod+Shift+5 move container to workspace number $ws5
	bindsym $mod+Shift+6 move container to workspace number $ws6
	bindsym $mod+Shift+7 move container to workspace number $ws7
	bindsym $mod+Shift+8 move container to workspace number $ws8
	bindsym $mod+Shift+9 move container to workspace number $ws9
	bindsym $mod+Shift+0 move container to workspace number $ws10
	
# Layout stuff:
	
	# Split
	bindsym $mod+b split h
	bindsym $mod+v split v

	# Change container layout (stacked, tabbed, toggle split)
	bindsym $mod+s layout stacking
	bindsym $mod+w layout tabbed
	bindsym $mod+e layout toggle split

	# Fullscreen
	bindsym $mod+f fullscreen

	# Toggle tiling / floating
	bindsym $mod+Shift+space floating toggle
	
	# Change focus between tiling / floating windows
	bindsym $mod+space focus mode_toggle
	
	# Focus the parent container
	bindsym $mod+a focus parent

# Scratchpad:
	
	# Move focused window to the scratch[ad
	bindsym $mod+Shift+minus move scratchpad
	
	# Show the next scratchpad window or hide the focused scratchpad window
	bindsym $mod+minus scratchpad show	

# Resizing:
	
	# Resize mode
	mode "resize" {
	        # Pressing left will shrink the window’s width.
	        # Pressing right will grow the window’s width.
	        # Pressing up will shrink the window’s height.
	        # Pressing down will grow the window’s height.
	        bindsym $left       resize shrink width 10 px
	        bindsym $down       resize grow height 10 px
	        bindsym $up         resize shrink height 10 px
	        bindsym $right      resize grow width 10 px
	
	        # Return to default mode
	        bindsym Return mode "default"
	        bindsym Escape mode "default"
	}

	# Enter resize mode
	bindsym $mod+r mode "resize"

# Utilities:

	# Volume
	bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && $refresh_i3status
	bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && $refresh_i3status
	bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status

	# Microphone
	bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status
	
	# Brightness
	bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set 5%+
	bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# Quick launch other apps

	# Browser (mod+,)
	bindsym $mod+comma exec --no-startup-id $browser

	# Discord
	bindsym $mod+period exec --no-startup-id discord

	# Flameshot
	bindsym Print exec --no-startup-id flameshot gui
### Status bar:

bar {
	# Indicators from i3status
        status_command i3blocks

	# Styling
	height 20
	workspace_min_width 30px
	position top

	colors {
		background		$black
		statusline		$white
		focused_statusline	$white
		focused_separator	$black

		# target		border	bg	text
		focused_workspace	$white	$black	$white
		active_workspace	$white	$black	$white
		inactive_workspace	$gray1	$black	$gray1
		urgent_workspace	$red	$black	$red
	}
}
